# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  getNotes(data: String!): [Note!]!
  getNote(data: String!): Note!
}

type Mutation {
  createNote(data: NewNote!): Note!
  updateNote(data: NoteUpdate!): Boolean!
  deleteNote(data: String!): Boolean!
}

type Note {
  id: String!
  title: String!
  content: String!
}

input NoteUpdate {
  id: String!
  title: String!
  content: String!
}

input NewNote {
  title: String!
  content: String!
}
